<Todo@TabbedPanelItem>:
    text: 'To-Do List'
    text_size: self.size

    BoxLayout:
        padding: 5
        spacing: 3
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                size: self.size
                pos: self.pos

        BoxLayout:
            orientation: 'vertical'
            spacing: 7

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.5, 0, 0.5, 1)
