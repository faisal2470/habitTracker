                                    width: 1 
                                    rectangle: self.x, self.y, self.width, self.height

                            background_color: 0, 0, 0, 0
                            foreground_color: 1, 1, 1, 1
                            cursor_color: 1, 1, 1, 1
                            hint_text: 'HH:MM'
                            size_hint_x: None
                            width: 70
                            multiline: False
                            on_text: root.reset_border_color(self, (1, 1, 1, 1))

                        MDFlatButton:
