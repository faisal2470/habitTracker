<CustomBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.7, 1
        Rectangle:
            size: self.size
            pos: self.pos

<CustomColorLabel@Label>:
    bg_color: (0.5, 0.5, 0.2, 1)
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

<CustomBoxLayout>:
    orientation: "vertical"
    spacing: 10
    padding: 10

    CustomColorLabel:
        text: "Productivity App"
        font_size: '24sp'
        size_hint: (1, None)
        height: 60
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    CustomTabbedPanel:
        size_hint: (1, 0.8)
        tab_pos: 'bottom_left'
        tab_height: 50

