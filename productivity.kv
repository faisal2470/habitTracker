<CustomBoxLayout@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.7, 0.7, 0.7, 1
        Rectangle:
            size: self.size
            pos: self.pos

<CustomColorLabel@Label>:
    bg_color: (0.5, 0.5, 0.2, 1)
    canvas.before:
        Color:
            rgba: root.bg_color
        Rectangle:
            size: self.size
            pos: self.pos

<CustomBoxLayout>:
    orientation: "vertical"
    spacing: 10

    CustomColorLabel:
        text: "Productivity App"
        font_size: '24sp'
        bold: True
        size_hint: (1, None)
        height: 60
        halign: 'center'
        valign: 'middle'
        text_size: self.size

    CustomTabbedPanel:
        tab_pos: 'bottom_left'
        tab_height: 50

        Home:
            id: home_tab

        Habit:
            id: habit_tab

        Todo:
            id: todo_tab

<Home@TabbedPanelItem>:
    text: 'Home'
    text_size: self.size

    BoxLayout:
        id: root_layout
        orientation: 'vertical'
        padding: 5
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            id: header_row
            cols: 8
            spacing: 1
            size_hint: (1, None)
            height: 25

            BoxLayout:
                id: date_change
                size_hint: (1, None)
                height: 25

                Button:
                    id: previous_button
                    size_hint: (0.25, 1)
                    text: '<'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    on_press:  root.change_week(dir='-')

                Button:
                    id: today_button
                    size_hint: (0.5, 1)
                    text: 'Today'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    on_press:  root.set_current_week()

                Button:
                    id: next_button
                    size_hint: (0.25, 1)
                    text: '>'
                    text_size: self.size
                    halign: 'center'
                    valign: 'middle'
                    on_press:  root.change_week(dir='+')

        GridLayout:
            id: week_row
            cols: 8
            spacing: 1
            size_hint: (1, None)
            height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: week_num
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25
                
            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: mon_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25
            
            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: tue_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: wed_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: thu_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: fri_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: sat_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

            CustomColorLabel:
                bg_color: (0.4, 0.4, 0.4, 1)
                id: sun_date
                color: 0, 0, 0, 1
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'middle'
                size_hint: (1, None)
                height: 25

        ScrollView:
            id: scroll_view
            size_hint: (1, 1)

            GridLayout:
                id: calendar_layout
                cols: 8
                spacing: 1
                size_hint: (1, None)
                height: self.minimum_height

                BoxLayout:
                    id: time_column
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: mon_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: tue_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: wed_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: thu_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: fri_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: sat_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

                BoxLayout:
                    id: sun_schedule
                    orientation: 'vertical'
                    size_hint_y: None
                    height: self.minimum_height
                    spacing: 1

    
<Habit@TabbedPanelItem>:
    text: 'Habit Tracker'
    text_size: self.size

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

<Todo@TabbedPanelItem>:
    text: 'To-Do List'
    text_size: self.size

    BoxLayout:
        padding: 5
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 3
            spacing: 2

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Task'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Appointment'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Event'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35

            ScrollView:
                id: task_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: tasks
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height

            ScrollView:
                id: appointment_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: appointments
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height

            ScrollView:
                id: event_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: events
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height






