<TodoLabel@BoxLayout>:
    id: container
    size_hint_y: None
    height: self.minimum_height
    orientation: 'vertical'
    canvas.after:
        Color:
            rgba: root.palette[0]
        Line:
            width: 1.2
            rectangle: self.x, self.y, self.width, self.height

    BoxLayout:
        size_hint_y: None
        height: self.minimum_height

        BoxLayout:
            size_hint: None, None
            width: 24
            height: 100
            orientation: 'vertical'

            MDFlatButton:
                id: priority_up
                padding: [0, 0, 0, 0]
                size_hint: 1, None
                height: "24dp"
                radius: [0, 0, 0, 0]  # Rounded corners
                theme_text_color: "Custom"
                canvas.before:
                    Color:
                        rgba: root.palette[0]
                    RoundedRectangle:
                        size: self.size
                        pos: self.pos
                        radius: [0, 0, 0, 0]  # Same rounded corners

                MDIcon:
                    icon: "chevron-up"
                    halign: 'center'
                    valign: 'middle'
                    size_hint: None, None
                    size: "30dp", "30dp"
                    theme_text_color: "Custom"
                    text_color: 1, 1, 1, 1

            CustomColorLabel:
                id: priority_label
                bg_color: root.p_color
                color: root.p_text_color
                text: '1'
                bold: True
                canvas.after:
                    Color:
                        rgba: root.palette[0]
