                            text_color: 1, 1, 1, 1  # White icon color
                            radius: [10, 10, 10, 10]  # Rounded corners
                            theme_text_color: "Custom"

                            MDIcon:
                                icon: "clock"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1  # White icon color
                
            BoxLayout:
                size_hint_y: None
