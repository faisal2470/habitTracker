                            background_color: 0, 0, 0, 0
                            foreground_color: 1, 1, 1, 1
                            cursor_color: 1, 1, 1, 1
                            hint_text: 'DD/MM/YYYY'
                            size_hint_x: None
                            width: 135
                            multiline: False
                            on_text: root.reset_border_color(self, (1, 1, 1, 1), 'ed')

                        MDFlatButton:
                            size_hint: None, None
                            size: "30dp", "30dp"  # Adjust width and height as needed
                            line_color: 1, 1, 1, 1  # White border color
                            text_color: 1, 1, 1, 1  # White icon color
                            radius: [10, 10, 10, 10]  # Rounded corners
                            theme_text_color: "Custom"
                            on_press: root.show_date_picker('ed')

                            MDIcon:
                                icon: "calendar"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1  # White icon color

                    BoxLayout:
                        spacing: 5
