#########################################
#            ADD TO-DO POPUP            #
#########################################

<AddToDo@Popup>:
    size_hint: None, None
    height: 450
    width: 400
    auto_dismiss: False

    BoxLayout:
        orientation: "vertical"
        padding: [0, 10, 0, 0]
        spacing: 10

        BoxLayout:
            orientation: 'vertical'
            spacing: 3

            BoxLayout:
                spacing: 5
                size_hint_y: None
                height: self.minimum_height

                TextInput:
                    id: todo_title
                    canvas.after:
                        Color:
                            rgba: 1, 1, 1, 1
                        Line:
                            width: 1
                            rectangle: self.x, self.y, self.width, self.height

                    background_color: 0, 0, 0, 0
                    foreground_color: 1, 1, 1, 1
                    cursor_color: 1, 1, 1, 1
                    hint_text: 'Title...'
                    size_hint_y: None
                    height: 35
                    multiline: False
                    on_text: root.reset_border_color(self, (1, 1, 1, 1), 'ti')

                MDFlatButton:
                    id: priority_button
                    line_color: 1, 1, 1, 1  # White border color
                    text_color: 1, 1, 1, 1  # White icon color
                    size_hint: None, None
                    size: "35dp", "35dp"
                    radius: [10, 10, 10, 10]  # Rounded corners
                    theme_text_color: "Custom"
                    on_press: root.toggle_priority(self)
                    canvas.before:
                        Color:
                            rgba: 0.17, 0.17, 0.17, 1  # Red background color
                        RoundedRectangle:
                            size: self.size
                            pos: self.pos
                            radius: [5, 5, 5, 5]  # Same rounded corners

                    MDLabel:
                        id: priority_label
                        text: "N"
                        halign: "center"
                        valign: "middle"
                        theme_text_color: "Custom"
                        text_color: 1, 1, 1, 1
                        size_hint: None, None
                        size: self.parent.size  # Match size of the button

            Label:
                id: title_error
                color: 1, 0, 0, 1
                text: ''
                font_size: '11sp'
                bold: True
                text_size: self.size
                size_hint_y: None
                height: 11

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

                Label:
                    id: start_label
                    text: 'Start'
                    text_size: self.size
                    font_size: '13sp'
                    size_hint: (1, None)
                    height: 16
                    markup: True

                MDSeparator:
                    height: 1
                    color: 1, 1, 1, 1

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: 51
                    padding: [0, 7, 0, 0]
                    spacing: 3

                    BoxLayout:
                        spacing: 5
                        TextInput:
                            id: start_date
                            canvas.after:
                                Color:
                                    rgba: 1, 1, 1, 1
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height

                            background_color: 0, 0, 0, 0
                            foreground_color: 1, 1, 1, 1
                            cursor_color: 1, 1, 1, 1
                            hint_text: 'DD/MM/YYYY'
                            size_hint_x: None
                            width: 135
                            multiline: False
                            on_text: root.reset_border_color(self, (1, 1, 1, 1), 'sd')

                        MDFlatButton:
                            id: sd_date_selector
                            size_hint: None, None
                            size: "30dp", "30dp"  # Adjust width and height as needed
                            line_color: 1, 1, 1, 1  # White border color
                            text_color: 1, 1, 1, 1  # White icon color
                            radius: [10, 10, 10, 10]  # Rounded corners
                            theme_text_color: "Custom"
                            on_press: root.show_date_picker('sd')

                            MDIcon:
                                icon: "calendar"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1  # White icon color

                    BoxLayout:
                        spacing: 5
                        padding: [18, 0, 0, 0]
                        TextInput:
                            id: start_time
                            canvas.after:
                                Color:
                                    rgba: 1, 1, 1, 1
                                Line:
                                    width: 1
                                    rectangle: self.x, self.y, self.width, self.height

                            background_color: 0, 0, 0, 0
                            foreground_color: 1, 1, 1, 1
                            cursor_color: 1, 1, 1, 1
                            hint_text: 'HH:MM'
                            size_hint_x: None
                            width: 100
                            multiline: False
                            on_text: root.reset_border_color(self, (1, 1, 1, 1), 'st')

                        MDFlatButton:
                            size_hint: None, None
                            size: "30dp", "30dp"  # Adjust width and height as needed
                            line_color: 1, 1, 1, 1  # White border color
                            text_color: 1, 1, 1, 1  # White icon color
                            radius: [10, 10, 10, 10]  # Rounded corners
                            theme_text_color: "Custom"
                            on_press: root.show_time_picker('st')

                            MDIcon:
                                icon: "clock"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1  # White icon color

                    Label:
                        id: sd_error
                        color: 1, 0, 0, 1
                        font_size: '11sp'
                        bold: True
                        text_size: self.size
                        size_hint_y: None
                        height: 11

                    BoxLayout:
                        size_hint_y: None
                        height: self.minimum_height
                        padding: [18, 0, 0, 0]
                        Label:
                            id: st_error
                            color: 1, 0, 0, 1
                            font_size: '11sp'
                            bold: True
                            text_size: self.size
                            size_hint_y: None
                            height: 11

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'

