<Habit@TabbedPanelItem>:
    text: 'Habit Tracker'
    text_size: self.size

    BoxLayout:
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

<Todo@TabbedPanelItem>:
    text: 'To-Do List'
    text_size: self.size

    BoxLayout:
        padding: 5
        canvas.before:
            Color:
                rgba: 0.7, 0.7, 0.7, 1
            Rectangle:
                size: self.size
                pos: self.pos

        GridLayout:
            cols: 3
            spacing: 2

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Task'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35
                    on_press: root.open_todo_popup('Add Task')

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Appointment'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35
                    on_press: root.open_todo_popup('Add Appointment')

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height

                CustomColorLabel:
                    bg_color: (0.4, 0.4, 0.4, 1)
                    text: 'Event'
                    bold: True
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (1, None)
                    height: 35

                Button:
                    text: '+'
                    text_size: self.size
                    valign: 'middle'
                    halign: 'center'
                    size_hint: (None, None)
                    height: 35
                    width: 35
                    on_press: root.open_todo_popup('Add Event')

            ScrollView:
                id: task_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: tasks
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height

            ScrollView:
                id: appointment_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: appointments
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height

            ScrollView:
                id: event_scroll
                size_hint: (1, 1)

                BoxLayout:
                    id: events
                    canvas.before:
                        Color:
                            rgba: 0.6, 0.6, 0.6, 1
                        Rectangle:
                            size: self.size
                            pos: self.pos

                    height: self.minimum_height


<AddToDo@Popup>:
    size_hint: None, None
    height: 450
    width: 300

    BoxLayout:
        orientation: "vertical"
        padding: [0, 10, 0, 0]

        BoxLayout:
            orientation: 'vertical'
            spacing: 5

            TextInput:
                id: todo_title
                canvas.after:
                    Color:
                        rgba: 1, 1, 1, 1
                    Line:
                        width: 1 
                        rectangle: self.x, self.y, self.width, self.height

                background_color: 0, 0, 0, 0
                foreground_color: 1, 1, 1, 1
                cursor_color: 1, 1, 1, 1
                hint_text: 'Title...'
                size_hint_y: None
                height: 35
                multiline: False
                on_text: root.reset_border_color(self, (1, 1, 1, 1))

            BoxLayout:
                size_hint_y: None
                height: self.minimum_height
                orientation: 'vertical'
                
                Label:
                    text: 'Start'
                    text_size: self.size
                    size_hint: (1, None)
                    height: 25

                MDSeparator:
                    height: 1
                    color: 1, 1, 1, 1

                GridLayout:
                    cols: 2
                    size_hint_y: None
                    height: 37
                    padding: [0, 7, 0, 0]

                    BoxLayout:
                        spacing: 5
                        TextInput:
                            id: start_date
                            canvas.after:
                                Color:
                                    rgba: 1, 1, 1, 1
                                Line:
                                    width: 1 
                                    rectangle: self.x, self.y, self.width, self.height

                            background_color: 0, 0, 0, 0
                            foreground_color: 1, 1, 1, 1
                            cursor_color: 1, 1, 1, 1
                            hint_text: 'DD/MM/YYYY'
                            size_hint_x: None
                            width: 110
                            multiline: False
                            on_text: root.reset_border_color(self, (1, 1, 1, 1))

                        MDFlatButton:
                            size_hint: None, None
                            size: "30dp", "30dp"  # Adjust width and height as needed
                            line_color: 1, 1, 1, 1  # White border color
                            text_color: 1, 1, 1, 1  # White icon color
                            radius: [10, 10, 10, 10]  # Rounded corners
                            theme_text_color: "Custom"

                            MDIcon:
                                icon: "calendar"
                                halign: "center"
                                theme_text_color: "Custom"
                                text_color: 1, 1, 1, 1  # White icon color

                    BoxLayout:
                        padding: [25, 0, 0, 0]
                        spacing: 5
                        TextInput:
                            id: start_time
                            canvas.after:
                                Color:
                                    rgba: 1, 1, 1, 1
